<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="moveis.dispositivos.graduacao.upf.com.primeiroandroid.MainActivity">


    <ImageView
        android:id="@+id/img"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:layout="@id/img"
        android:layout_alignBottom="@id/img"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:text="Ricardo Ogliari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtPost"
        android:layout_below="@id/img"
        android:text="Um lance curioso empolgou os fãs de Counter-Strike: Global Offensive durante a goleada do Brasil por 4 x 1 sobre o Uruguai, nesta quinta-feira. O atacante Neymar, fã confesso de CS:GO, comemorou seu belo gol de cobertura com uma coreografia inusitada, mas que foi rapidamente reconhecida pelos praticantes do jogo. Ele simulou o arremesso de uma granada que cega os inimigos e depois cobriu seu rosto para não ser afetado pelo artefato imaginário. Veja o vídeo."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:entries="@array/opcoes"
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Spinner>

    <Button
        android:layout_below="@+id/spinner"
        android:id="@+id/button"
        android:onClick="chamaTelaComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:text="Comentar" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/button"
        android:text="Limpar" />

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/shape_botao"
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btnLimpar"
        android:text="Sair" />
</RelativeLayout>
